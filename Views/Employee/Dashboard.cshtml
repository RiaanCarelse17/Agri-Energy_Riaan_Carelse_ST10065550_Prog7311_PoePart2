@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Welcome to Employee Dashboard</h1>

    <!-- Success message for adding farmer -->
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">
            @ViewBag.Success
        </div>
    }

    <div class="d-grid gap-3">
        <!-- Add Farmer -->
        <form method="get" asp-action="AddFarmer">
            <button type="submit" class="btn btn-primary">Add Farmer</button>
        </form>

        <!-- View Products -->
        <form method="get" asp-action="ViewProducts">
            <button type="submit" class="btn btn-secondary">View Products</button>
        </form>


    </div>
</div>
