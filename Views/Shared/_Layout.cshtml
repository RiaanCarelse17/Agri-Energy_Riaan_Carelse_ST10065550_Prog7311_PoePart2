@{
    var userType = TempData["UserType"] as string;
    var userName = TempData["UserName"] as string;
    TempData.Keep(); // Keep TempData alive across requests
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agri_Energy_Riaan_Carelse_ST10065550_Prog7311_PoePart2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agri_Energy_Riaan_Carelse_ST10065550_Prog7311_PoePart2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Agri_Energy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (userType == "Farmer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Farmer" asp-action="Dashboard">Farmer Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Farmer" asp-action="AddProduct">Add Product</a>
                            </li>
                        }
                        else if (userType == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Employee" asp-action="Dashboard">Employee Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Employee" asp-action="AddFarmer">Add Farmer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Employee" asp-action="ViewProducts">View Products</a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(userType))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Logout">Logout (@userName)</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Agri_Energy_Riaan_Carelse_ST10065550_Prog7311_PoePart2 - <a class="text-primary" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
